{
    "manifest_version": 3,
    "name": "University Portal Automation",
    "version": "1.0",
    "description": "Automate file download and upload on the university portal.",
    "permissions": ["cookies", "storage", "downloads", "scripting"],
    "host_permissions": [
        "https://ums.asu.edu.eg/*",
        "https://ums.asu.edu.eg:7090/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://ums.asu.edu.eg/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}

